<%- include('../partials/header') %>

<h2>Flights</h2>
<table>
  <thead>
    <tr>
      <th>Flight</th>
      <th>Airport</th>
      <th>Flight Number</th>
      <th>Boarding Date</th>
    </tr>
  </thead>
  <tbody>
    <% flights.forEach(function(f) { %>
      <tr>
        <td><%= f.flightNo %></td>
        <td><%= f.airport %></td>
        <td><%= f.airline %></td>
        <td class="<%=f.departs < new Date() ? 'past-date':''%>"><%= f.departs %></td>
        <td><a href="/flights/<%= f._id %>">Details</a></td>
      </tr>
    <% }); %>
  </tbody>
</table>

<%- include('../partials/footer') %>